<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:id="@+id/row_list_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp"
        android:clickable="true"
        app:cardElevation="6dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/in_scheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:text="Scheme"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/in_purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:text="Purpose"
                android:textColor="#a9a9a9"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/in_eligibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:text="Eligibility"
                android:textColor="#a9a9a9"
                android:textSize="19sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/in_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:text="Amount of Loan"
                android:textColor="#a9a9a9"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/in_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:text="Margin"
                android:textColor="#a9a9a9"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/in_repay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:text="Repayment"
                android:textColor="#a9a9a9"
                android:textSize="19sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/in_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:text="Interest Rate"
                android:textColor="#a9a9a9"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/in_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:text="Security"
                android:textColor="#a9a9a9"
                android:textSize="19sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>